{
    "manifest_version": 3,
    "name": "Heartify",
    "version": "1.0.8",
    "description": "Returns hearts back to Spotify playlists!",
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "permissions": [
        "webRequest",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://open.spotify.com/*",
        "https://api-partner.spotify.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "/assets/heart_unfilled.svg",
                "/assets/heart_filled.svg"
            ],
            "matches": [
                "https://open.spotify.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "heartify@moma.rs",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}